  {
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2017", "dom"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "outDir": ".tmp",
    "inlineSources": true,
    "inlineSourceMap": true,
    "rootDir": "./",
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "stories/**/*.ts"]
}
