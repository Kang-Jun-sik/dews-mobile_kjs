{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es6", "es2017", "dom"],
    //    "strict": true,
    "allowJs": true,
    "declaration": true,
    "declarationDir": "dist/types",
//    "esModuleInterop": false, // true
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "rootDir": "./",
    "outDir": "dist/"
  },
  "include": [
    "declarations.d.ts",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "rollup.config.js",
    "karma.conf.js"
  ]
}
